{
  "env": {
    "es6": true,
    "mocha": true,
    "node": true
  },
  "extends": [
    "ericgio",
    "plugin:jsx-a11y/recommended"
  ],
  "globals": {
    "FB": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": [
    "flowtype",
    "jsx-a11y"
  ],
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    }
  }
}
